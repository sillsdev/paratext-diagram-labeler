{
  "name": "paratext-diagram-labeler",
  "version": "0.0.7",
  "private": true,
  "author": "SIL Scripture Publishing Services <paratextmaplabeler@gmail.com>",
  "description": "Paratext Diagram Labeler",
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "bootstrap": "^5.3.6",
    "electron-squirrel-startup": "^1.0.1",
    "leaflet": "^1.9.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-leaflet": "^5.0.0",
    "react-scripts": "5.0.1",
    "usfm-js": "^3.4.3",
    "web-vitals": "^2.1.4",
    "winreg": "^1.2.5",
    "xml2js": "^0.6.2"
  },
  "main": "build/electron-main.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test-ci": "react-scripts test --watchAll=false --runInBand --passWithNoTests --json --outputFile=jest-results.json",
    "dev-mode": "concurrently \"npm start\" \"wait-on http://localhost:3000 && npm run electron-dev\"",
    "eject": "react-scripts eject",
    "electron": "cross-env NODE_ENV=development electron electron-main.js",
    "electron-debug": "cross-env NODE_ENV=development electron --inspect-brk=9229 .",
    "electron-source": "cross-env NODE_ENV=development electron electron-main.js",
    "electron-dev": "cross-env NODE_ENV=development electron electron-main.js",
    "electron-prod": "cross-env NODE_ENV=production electron .",
    "copy-resources": "node copy-resources.js",
    "package-windows": "react-scripts build && node copy-resources.js && electron-builder build --win --publish never",
    "package-mac": "react-scripts build && node copy-resources.js && electron-builder build --mac --publish never",
    "package-linux": "react-scripts build && node copy-resources.js && electron-builder build --linux --publish never"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^36.3.1",
    "electron-builder": "^26.0.12",
    "fs-extra": "^11.3.0",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "org.sil.paratext-diagram-labeler",
    "productName": "Paratext Diagram Labeler",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "electron-main.js",
      "preload.js"
    ],
    "directories": {
      "buildResources": "buildResources",
      "output": "dist"
    },
    "extraResources": [
      {
        "from": "public/assets",
        "to": "assets"
      },
      {
        "from": "buildResources/icon.ico",
        "to": "icon.ico"
      }
    ],
    "asar": false,
    "npmRebuild": false,
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "buildResources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "buildResources/icon.ico",
      "uninstallerIcon": "buildResources/icon.ico",
      "installerHeaderIcon": "buildResources/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Paratext Diagram Labeler"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/logo512.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Education"
    },
    "deb": {
      "depends": [
        "libasound2",
        "libnss3",
        "libxss1"
      ]
    }
  }
}